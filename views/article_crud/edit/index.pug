extends layout
block content
  include ../../common_features/navbar.pug
  div#global-wrapper.content
    div.columns
      div.column.is-2
        include ../../common_features/menu.pug
      div#middle-content.column.is-7
        form.section(method="POST" action="/articles/edit/" + article.urlId enctype="multipart/form-data")
          h1| write an article
          h1#warning-msg
          div.columns
            div.column.is-5
              label.label| any computer code in this post?
              span.control
                span.select.is-small
                  select(name="hasCode")
                    option(value="1")| contains computer code
                    option(value="0")| has no computer code

          div(style="margin: .8rem auto;")
            label.label| Article main title
            span.control
              input.spell-check.input.is-small(name="title" required value= article.title)
                
          div(style="margin: .8rem auto;")
            label.label.spell-check| article`s informative introduction text
            span.control
              textarea.spell-check.textarea(name="intro")
          div
            textarea#articleBody(name="body" style="width: 100%; height: 300px;")= article.body
          div(style="margin-top: 1rem;")
            button.button.is-dark.is-fullwidth| Save Edits
          
            
      include ../../common_features/rightbar.pug
                
      script(type="text/javascript" src="/js/common-features.js")
    script(type="text/javascript" src="/js/article/write.js")
